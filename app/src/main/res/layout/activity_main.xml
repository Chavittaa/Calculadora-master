<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.edu.itq.chavitta.calculadora.MainActivity">



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/display"
        android:textSize="40dp"
        android:textAlignment="textEnd"
        android:background="@android:color/darker_gray"
        android:text="0"
        style="@style/Base.AlertDialog.AppCompat"
        android:editable="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:maxLines="1"
        android:ellipsize="end"
        android:singleLine="true"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="1"
        android:textSize="40dp"
        android:id="@+id/btn1"
        android:layout_above="@+id/btn4"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="22dp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="2"
        android:textSize="40dp"
        android:id="@+id/btn2"
        android:layout_marginStart="19dp"
        android:layout_alignTop="@+id/btn1"
        android:layout_toEndOf="@+id/btn1" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="3"
        android:textSize="40dp"
        android:id="@+id/btn3"
        android:layout_marginStart="18dp"
        android:layout_alignTop="@+id/btn2"
        android:layout_toEndOf="@+id/btn2" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="รท"
        android:textSize="40dp"
        android:id="@+id/btnDiv"
        android:layout_alignTop="@+id/btn3"
        android:layout_alignEnd="@+id/display" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="4"
        android:textSize="40dp"
        android:id="@+id/btn4"
        android:layout_alignTop="@+id/btn5"
        android:layout_toStartOf="@+id/btn2" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="5"
        android:textSize="40dp"
        android:id="@+id/btn5"
        android:layout_above="@+id/btn8"
        android:layout_alignStart="@+id/btn8"
        android:layout_marginBottom="22dp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="6"
        android:textSize="40dp"
        android:id="@+id/btn6"
        android:layout_alignTop="@+id/btn5"
        android:layout_alignStart="@+id/btn3" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="X"
        android:textSize="40dp"
        android:id="@+id/btnPor"
        android:layout_alignTop="@+id/btn6"
        android:layout_alignEnd="@+id/display" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="7"
        android:textSize="40dp"
        android:id="@+id/btn7"
        android:layout_above="@+id/btn0"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="8"
        android:textSize="40dp"
        android:id="@+id/btn8"
        android:layout_alignBottom="@+id/btn7"
        android:layout_toStartOf="@+id/btn3" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="9"
        android:textSize="40dp"
        android:id="@+id/btn9"
        android:layout_alignBottom="@+id/btn8"
        android:layout_alignStart="@+id/btn6" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="-"
        android:textSize="40dp"
        android:id="@+id/btnMenos"
        android:layout_alignBottom="@+id/btn9"
        android:layout_alignStart="@+id/btnPor" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="0"
        android:textSize="40dp"
        android:id="@+id/btn0"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="."
        android:textSize="40dp"
        android:id="@+id/btnPto"
        android:layout_alignTop="@+id/btn0"
        android:layout_alignStart="@+id/btn8" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="="
        android:textSize="40dp"
        android:id="@+id/btnIgual"
        android:layout_alignTop="@+id/btnPto"
        android:layout_alignStart="@+id/btn9" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="+"
        android:textSize="40dp"
        android:id="@+id/btnMas"
        android:layout_alignTop="@+id/btnIgual"
        android:layout_alignStart="@+id/btnMenos" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Limpiar"
        android:id="@+id/btnClear"
        android:layout_above="@+id/btnDiv"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="11dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="HC-2405"
        android:id="@+id/textView"
        android:layout_alignBaseline="@+id/btnClear"
        android:layout_alignBottom="@+id/btnClear"
        android:layout_toStartOf="@+id/btn5" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignTop="@+id/textView"
        android:layout_alignEnd="@+id/btn3"
        android:src="@drawable/fotocelda"/>

</RelativeLayout>
